<h1>New Post</h1>

<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |e| %>
        <%= e %>
    <% end %>
<% end %>

<%= form_for @post do |f|  %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :content %>
<%= f.text_area :content %>
<%= f.label :blogger %>
<%= f.collection_select :blogger_id, Blogger.all, :id, :name%>
<%= f.label :destination %>
<%= f.collection_select :destination_id, Destination.all, :id, :name%>
<%= f.submit %>

<% end %>